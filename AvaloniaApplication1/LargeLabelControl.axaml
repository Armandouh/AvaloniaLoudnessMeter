<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AvaloniaApplication1">
    <Design.PreviewWith>
        <Border Background="{DynamicResource DarkBlueBrush}">
            <StackPanel Margin="50">
                <controls:LargeLabelControl Margin="5" />
                <controls:LargeLabelControl Margin="5" Classes="button" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|LargeLabelControl">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource MidBlueBrush}"></Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}">
                    <StackPanel>
                        <Label HorizontalAlignment="Center" FontSize="25" Content="{TemplateBinding LargeText}" />
                        <Label HorizontalAlignment="Center" Content="{TemplateBinding SmallText}" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|LargeLabelControl.button">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="{DynamicResource MidBlueBrush}"></Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <Label Padding="15, 3" CornerRadius="20" Background="{TemplateBinding Background}" HorizontalAlignment="Center" FontSize="25" Content="{TemplateBinding LargeText}" />
                    <Label Margin="0, 4, 0, 0" HorizontalAlignment="Center" Content="{TemplateBinding SmallText}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>